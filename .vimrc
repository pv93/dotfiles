syntax on

au BufNewFile,BufRead Dockerfile.build   set syntax=Dockerfile

set autoindent
" show existing tab with 2 spaces width
set tabstop=2
" when indenting with '>', use 2 spaces width
set shiftwidth=2
" On pressing tab, insert 2 spaces
set expandtab
set number

colorscheme default 

set splitbelow
set splitright
set ruler
